{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "esnext",
    "target": "ES2021",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["libs/*"],
      "@exchanges/common": ["libs/common/src/index.ts"],
      "@exchanges/prisma-schema": ["libs/prisma-schema/prisma/schema.prisma"],
      "@exchanges/redis": ["libs/redis/src/index.ts"],
      "@exchanges/ws-exchange": ["libs/ws-exchange/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
